<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.PilganActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="60dp"
            android:layout_height="63dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/navigation"
            android:layout_width="107dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:background="@color/secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.947"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="322dp"
            android:layout_height="242dp"
            android:layout_marginTop="88dp"
            android:background="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.imageview.ShapeableImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_white"
            android:layout_width="126dp"
            android:layout_height="117dp"
            android:src="@color/white"
            app:civ_border_color="@color/primary"
            app:civ_border_width="4dp"
            app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
            app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
            app:layout_constraintTop_toBottomOf="@+id/tv_soal" />

        <ImageView
            android:id="@+id/emote"
            android:layout_width="81dp"
            android:layout_height="74dp"
            android:src="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/circle_white"
            app:layout_constraintEnd_toEndOf="@+id/circle_white"
            app:layout_constraintStart_toStartOf="@+id/circle_white"
            app:layout_constraintTop_toTopOf="@+id/circle_white" />

        <ImageView
            android:id="@+id/rating1"
            android:layout_width="49dp"
            android:layout_height="59dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/circle_empty"
            app:layout_constraintEnd_toStartOf="@+id/rating2"
            app:layout_constraintTop_toBottomOf="@+id/circle_white" />
        <ImageView
            android:id="@+id/rating2"
            android:layout_width="49dp"
            android:layout_height="59dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/circle_empty"
            app:layout_constraintEnd_toStartOf="@+id/rating3"
            app:layout_constraintTop_toBottomOf="@+id/circle_white" />


        <ImageView
            android:id="@+id/rating3"
            android:layout_width="49dp"
            android:layout_height="59dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/circle_empty"
            app:layout_constraintEnd_toEndOf="@+id/circle_white"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/circle_white"
            app:layout_constraintTop_toBottomOf="@+id/circle_white" />

        <ImageView
            android:id="@+id/rating4"
            android:layout_width="49dp"
            android:layout_height="59dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/circle_empty"
            app:layout_constraintStart_toEndOf="@+id/rating3"
            app:layout_constraintTop_toBottomOf="@+id/circle_white" />

        <ImageView
            android:id="@+id/rating5"
            android:layout_width="49dp"
            android:layout_height="59dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/circle_empty"
            app:layout_constraintStart_toEndOf="@+id/rating4"
            app:layout_constraintTop_toBottomOf="@+id/circle_white" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="133dp"
            android:layout_height="113dp"
            app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
            app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
            app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
            app:srcCompat="@drawable/image_soal" />

        <TextView
            android:id="@+id/tv_soal"
            android:layout_width="278dp"
            android:layout_height="93dp"
            android:text="Silahkan pilih satu yang kamu suka"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
            app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/secondary"
            android:text="Selanjutnya"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating3" />

        <Button
            android:id="@+id/btn_prev"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_marginTop="92dp"
            android:backgroundTint="@color/secondary"
            android:text="Sebelumnya"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btn_next"
            app:layout_constraintHorizontal_bias="0.745"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating3" />

        <TextView
            android:id="@+id/tv_indeks"
            android:layout_width="73dp"
            android:layout_height="19dp"
            android:text="1 of 3"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/navigation"
            app:layout_constraintEnd_toEndOf="@+id/navigation"
            app:layout_constraintStart_toStartOf="@+id/navigation"
            app:layout_constraintTop_toTopOf="@+id/navigation" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
